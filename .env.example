# ========================================
# Physical Humanoid Robotics Textbook Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ========================================
# OpenAI API Settings
# ========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# ========================================
# Neon Database Settings
# ========================================
# Get your database URL from: https://neon.tech
NEON_DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
NEON_DATABASE_URL_DIRECT=postgresql://user:password@host:port/database?sslmode=require

# ========================================
# Qdrant Vector Database Settings
# ========================================
# Get your URL and API key from: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-url.qdrant.tech
QDRANT_API_KEY=your_qdrant_api_key_here

# ========================================
# Redis Cache Settings
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# Docusaurus Settings
# ========================================
# Deployment configuration - Docusaurus uses these variables
# GitHub Pages (default)
DEPLOY_URL=https://abeer2626.github.io
DEPLOY_BASE_URL=/robot-book-sami

# For other platforms, uncomment and modify:
# Netlify
# DEPLOY_URL=https://your-site-name.netlify.app
# DEPLOY_BASE_URL=/

# Vercel
# DEPLOY_URL=https://your-site-name.vercel.app
# DEPLOY_BASE_URL=/

# Local development
# DEPLOY_URL=http://localhost:3004
# DEPLOY_BASE_URL=/

# Legacy variables (deprecated but kept for compatibility)
SITE_URL=https://your-domain.vercel.app
BASE_URL=/

# ========================================
# Development Settings
# ========================================
# Development server
DEV_PORT=3000
DEV_HOST=localhost

# Hot reload
HOT_RELOAD=true